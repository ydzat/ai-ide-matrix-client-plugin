{
  "name": "ai-ide-matrix-client-plugin",
  "displayName": "Matrix Client",
  "description": "Secure, decentralized messaging integration using Matrix protocol",
  "version": "0.1.0",
  "publisher": "ai-ide",
  "appId": "matrix-client",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "matrix",
    "messaging",
    "decentralized",
    "communication",
    "element",
    "chat"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:matrix-client.connect",
    "onCommand:matrix-client.disconnect",
    "onCommand:matrix-client.sendMessage",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "matrix-client.connect",
        "title": "Connect to Matrix",
        "category": "Matrix Client"
      },
      {
        "command": "matrix-client.disconnect",
        "title": "Disconnect from Matrix",
        "category": "Matrix Client"
      },
      {
        "command": "matrix-client.sendMessage",
        "title": "Send Message",
        "category": "Matrix Client"
      },
      {
        "command": "matrix-client.joinRoom",
        "title": "Join Room",
        "category": "Matrix Client"
      },
      {
        "command": "matrix-client.leaveRoom",
        "title": "Leave Room",
        "category": "Matrix Client"
      },
      {
        "command": "matrix-client.showSettings",
        "title": "Show Settings",
        "category": "Matrix Client"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "matrix-client.chatView",
          "name": "Matrix Chat",
          "when": "matrix-client.connected"
        },
        {
          "id": "matrix-client.roomsView",
          "name": "Rooms",
          "when": "matrix-client.connected"
        }
      ]
    },
    "ui": {
      "main": {
        "component": "MatrixClientMain",
        "file": "ui-new/MatrixClientMain.js"
      }
    },
    "configuration": {
      "title": "Matrix Client",
      "properties": {
        "matrix-client.homeserver": {
          "type": "string",
          "default": "https://matrix.org",
          "description": "Matrix homeserver URL"
        },
        "matrix-client.accessToken": {
          "type": "string",
          "default": "",
          "description": "Matrix access token"
        },
        "matrix-client.userId": {
          "type": "string",
          "default": "",
          "description": "Matrix user ID"
        },
        "matrix-client.deviceId": {
          "type": "string",
          "default": "ai-ide-matrix-client",
          "description": "Device ID for Matrix client"
        },
        "matrix-client.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect on startup"
        },
        "matrix-client.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show desktop notifications for new messages"
        }
      }
    }
  },
  "scripts": {
    "compile": "echo 'No compilation needed for this extension'"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-button": "^2.0.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-input": "^1.0.0",
    "@radix-ui/react-textarea": "^1.0.0",
    "@radix-ui/react-badge": "^1.0.0",
    "@radix-ui/react-card": "^1.0.0",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-toast": "^1.1.5",
    "lucide-react": "^0.294.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ai-ide-matrix-client-plugin"
  }
}
